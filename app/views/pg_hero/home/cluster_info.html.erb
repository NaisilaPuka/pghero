<div class="content">
  <h1>Cluster Info</h1>
    <p><b>Citus Version: <%= @citus_version %></b></p>
  <h3>Worker Nodes</h3>
  <table class="table nodes-table">
    <thead>
      <tr>
        <th style="width: 8%;"><%= link_to "ID", {} %></th>
        <th colspan = 3><%= link_to "Name", {sort: "name"} %></th>
        <th>Port</th>
        <th>Role</th>
        <th>Status</th>
        <th>Shards</th>
        <th><%= link_to "Size", {sort: "size"} %></th>
      </tr>
    </thead>
    <tbody>
      <% @nodes_info.each do |node_info| %>
        <tr>
          <td style="width: 8%;">
            <span style="word-break: break-all;">
              <%= number_with_delimiter(node_info[:id]) %>
            </span>
          </td>
          <td colspan = 3>
            <span style="word-break: break-all;">
              <%= node_info[:name] %>
            </span>
          </td>
          <td>
            <span style="word-break: break-all;">
              <%= node_info[:port] %>
            </span>
          </td>
          <td>
            <span style="word-break: break-all;">
              <%= node_info[:role] %>
            </span>
          </td>
          <td>
            <span style="word-break: break-all;">
              <%= node_info[:status] ? 'active' : 'inactive' %>
            </span>
          </td>
          <td>
            <span style="word-break: break-all;">
              <%= number_with_delimiter(node_info[:shard_count]) %>
            </span>
          </td>
          <td>
            <span style="word-break: break-all;">
              <%= PgHero.pretty_size(node_info[:size]) %>
            </span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <h3>Distributed Tables</h3>
  <p><b><span style="color: #09436a;">NOTE: </span></b><em>Size</em> stands for all the disk space used by the shards of the table, including all indexes.</p>
  <table class="table nodes-table">
    <thead>
      <tr>
        <th style="width: 11%;"><%= link_to "Coloc. ID", {} %></th>
        <th colspan = 2><%= link_to "Name", {sort: "part_table_name"} %></th>
        <th>Part. Method</th>
        <th>Part. Column</th>
        <th style="width: 11%;">Shards</th>
        <th style="width: 12%;"><%= link_to "Size", {sort: "part_size"} %></th>
      </tr>
    </thead>
    <tbody>
      <% @partitioned_tables.each do |part_table| %>
        <tr>
          <td style="width: 11%;">
            <span style="word-break: break-all;">
              <%= number_with_delimiter(part_table[:coloc_id]) %>
            </span>
          </td>
          <td colspan = 2>
            <span style="word-break: break-all;">
              <%= part_table[:part_table_name] %>
            </span>
            <% if part_table[:schema] != "public" %>
              <span class="text-muted"><%= part_table[:schema] %></span>
            <% end %>
          </td>
          <td>
            <span style="word-break: break-all;">
              <%= part_table[:partmethod] %>
            </span>
          </td>
          <td>
            <span style="word-break: break-all;">
              <%= part_table[:partition_column] %>
            </span>
          </td>
          <td style="width: 11%;">
            <span style="word-break: break-all;">
              <%= part_table[:shard_count] %>
            </span>
          </td>
          <td style="width: 12%;">
            <span style="word-break: break-all;">
              <%= PgHero.pretty_size(part_table[:part_size]) %>
            </span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
